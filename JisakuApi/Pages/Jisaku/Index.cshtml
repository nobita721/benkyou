@page
@model JisakuApi.Pages.Jisaku.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FileUpload[0].ApprovalNo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FileUpload[0].FileName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FileUpload[0].FileData)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FileUpload[0].ModifiedDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.FileUpload) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ApprovalNo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FileName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FileData)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ModifiedDate)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
